	<script>
$(document).ready(function() {
    // AJAX 요청으로 비교 투표 데이터를 가져옴
    $.ajax({
        url: './api/comparison-polls',
        type: 'GET',
        dataType: 'json',
        success: function(data) {
            populateBoxOfficePolls(data); // 박스오피스 섹션에 데이터 추가
            populateMovieDropdowns(data); // 드롭다운에 데이터 추가
        },
        error: function(xhr, status, error) {
            console.error('AJAX 요청 실패:', status, error);
        }
    });
});

// 박스오피스 투표 섹션에 데이터 추가
function populateBoxOfficePolls(data) {
    var boxOfficeContent = '';
    $.each(data, function(index, poll) {
        boxOfficeContent += `
            <div class="vote-item">
                <a href="./poll-page.jsp?pollId=${poll.pollId}" class="text-decoration-none">${poll.pollName}</a>
            </div>
        `;
    });
    $('.vote-section:first-child').html(`
        <h2>박스오피스 투표</h2>
        ${boxOfficeContent}
    `);
}

// 드롭다운 메뉴에 영화 데이터 추가
function populateMovieDropdowns(data) {
    var movieOptions = '<option value="">영화를 선택하세요</option>';
    $.each(data, function(index, poll) {
        movieOptions += '<option value="' + poll.pollId + '">' + poll.pollName + '</option>';
    });
    $('#movie1Select, #movie2Select').html(movieOptions);
}
</script>



